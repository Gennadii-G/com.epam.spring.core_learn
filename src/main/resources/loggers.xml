<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
 		http://www.springframework.org/schema/beans
 		http://www.springframework.org/schema/beans/spring-beans-3.2.xsd">

    <bean id="consoleEventLogger" class="main.entity.ConsoleEventLogger"/>

    <bean id="fileEventLogger" class="main.entity.FileEventLogger" init-method="init">
        <constructor-arg value="src\main\save_files\log.txt"/>
    </bean>

    <bean id="cacheFileEventLogger" class="main.entity.CacheFileEventLogger"
          destroy-method="destroy" parent="fileEventLogger">
        <constructor-arg index="1" value="5"/>
    </bean>

    <bean id="combinedEventLogger" class="main.entity.CombinedEventLogger">
        <constructor-arg>
            <list>
                <ref bean="consoleEventLogger"/>
                <ref bean="fileEventLogger"/>
            </list>
        </constructor-arg>
    </bean>


</beans>